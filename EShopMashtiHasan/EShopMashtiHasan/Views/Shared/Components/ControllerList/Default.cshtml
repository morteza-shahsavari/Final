@model IEnumerable<Security.Domain.DTO.ProjectController.ProjectControllerListItem>

@{
    ViewData["Title"] = "Default";
}

<table class="table table-bordered table-hover table-striped table-sm">
    <thead class="bg-info">
        <tr>
            <th>
               شناسه
            </th>
            <th>
               نام کنترلر
            </th>
            <th>
               توضیحات
            </th>
            <th>
               اریا
            </th>
            <th class="text-center">
                <Span>Action</Span>
            </th>
        </tr>
    </thead>
    <tbody>
         @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr id="tr_@item.ProjectControllerID">
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectControllerID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectControllerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersianTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AreaName)
                    </td>
                    <td class="text-center">
                        <span class="btn btn-danger " data-id="@item.ProjectControllerID"
                      data-action='@Url.Action("Delete","ProjectControllerManagement")'
                      data-action-BindGrid='@Url.Action("ControllerList","ProjectControllerManagement")'
                      data-action-RefreshGrid='@Url.Action("ControllerSearchBox","ProjectControllerManagement")'
                      data-Delete="Delete"><i class="fa fa-trash-o" aria-hidden="true"></i></span>

                        <a href="#" class="btn btn-primary " data-id="@item.ProjectControllerID"
                   data-action='@Url.Action("Update","ProjectControllerManagement")'
                   data-container="dvAddEditModel" data-modal-id="myModal" data-showEditModel="showEditModel">
                   <i class="fa fa-pencil" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }

            <tr class="text-center">
                <td colspan="5">
                    @{
                        Security.Domain.DTO.ProjectController.ProjectControllerSearchModel sm = (Security.Domain.DTO.ProjectController.ProjectControllerSearchModel)ViewBag.sm;
                    }





                    <ul class="pagination">
                        @for (int i = 0; i < sm.pageCount; i++)
                        {

                            if (sm.PageIndex != i)
                            {
                                <li class="page-item">
                                    @Html.ActionLink("Page " + (i + 1), "Index", "ProjectControllerManagement", new Security.Domain.DTO.ProjectController.ProjectControllerSearchModel
                        {
                        pageCount = sm.pageCount,
                        RecordCount = sm.RecordCount,
                        PageSize = 10,
                        ProjectAreaID = sm.ProjectAreaID,ProjectControllerID=sm.ProjectControllerID,ProjectControllerName=sm.ProjectControllerName,
                        PageIndex = i
                        }, new { @class = "page-link" })
                                </li>
                            }
                            else
                            {
                                <li class="page-item active">
                                    @Html.ActionLink("Page " + (i + 1), "Index", "ProjectControllerManagement", new Security.Domain.DTO.ProjectController.ProjectControllerSearchModel
                        {
                        pageCount = sm.pageCount,
                        RecordCount = sm.RecordCount,
                        PageSize = 10,
                        ProjectAreaID = sm.ProjectAreaID,ProjectControllerID=sm.ProjectControllerID,ProjectControllerName=sm.ProjectControllerName,
                        PageIndex = i
                        }, new { @class = "page-link" })
                                </li>
                            }


                        }
                    </ul>
                </td>
            </tr>

        }

    </tbody>
</table>
