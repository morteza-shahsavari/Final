@model Security.Domain.DTO.ProjectAction.ProjectActionAddModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Default";
}

<div>
    <form asp-action="Default" id="frmAddnew" class="FormAddNew">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class ="form-AddNew">
                <label  >اکشن:</label>
                <input asp-for="ProjectActionName"  />
                <span asp-validation-for="ProjectActionName" class="text-danger"></span>
            </div>
            <div class ="form-AddNew">
                <label  >توضیحات:</label>
                <input asp-for="PersianTitle"  />
                <span asp-validation-for="PersianTitle" class="text-danger"></span>
            </div>
            <div class ="form-AddNew">
                <label  >کنترلر:</label>
                <select asp-for="ProjectControllerID" asp-items=@ViewBag.drpController ></select>
                <span asp-validation-for="ProjectControllerID" class="text-danger"></span>
            </div>
           
        </form>
    <div class="btn-modal">
    <span type="submit" id="btnAddNew" class="btn btn-primary "
          data-action='@Url.Action("AddNew","ProjectActionManagement")'
          data-form="frmAddnew" data-method="post"
          data-action-BindGrid='@Url.Action("ActionList","ProjectActionManagement")'
              data-action-RefreshGrid='@Url.Action("ActionSearchBox","ProjectActionManagement")'> ثبت جدید</span>
          <span class="btn btn-primary btn-Cancel" id="btnCancelEdit">انصراف</span>
    </div>
    </div>


