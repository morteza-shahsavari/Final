@model Shopping.DomainModel.DTO.Product.ProductSearchModel

@{
    Layout = null;
}

<div class="SerachBox">
    <form class="FormSearch" action='@Url.Action("Index","ProductManag", new Shopping.DomainModel.DTO.Product.ProductSearchModel{CategoryID=Model.CategoryID,ProductName=Model.ProductName})'>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="SearchBox-div" style="width:35%">
            <label style="width:23%" class="control-label">محصول:</label>
            <input asp-for="ProductName" class="form-control" style="width:75%" />
            </div>
        <div class="SearchBox-div" style="width:35%; height:20px">
            <label style="width:9%" class="control-label">رده:</label>
            <select asp-for="CategoryID" asp-items=@ViewBag.DrpCategory style="width:90%" class="form-control"></select>

            </div>
        <div class="SearchBox-div" style="width:10%">
                <input type="submit" value="جستجو" class="btn btn-primary" />
            </div>
        </form>
    </div>



