@model List<ProductListItem>
<div class="product-carousel owl-carousel owl-theme">
    @foreach (var item in Model)
    {
        <div class="item">
            <a href="@Url.Action("ProductDetails","Product",new{id = item.ProductID})">
                <img src="@Url.Content(item.Picture1)"
                 class="img-fluid" alt="">
            </a>
            <h2 class="post-title">
                <a href="@Url.Action("ProductDetails","Product",new{id = item.ProductID})">@item.ProductName</a>
            </h2>
            <div class="price">
               @* <div class="text-center">
                    <del><span>@item.UnitPrice<span>تومان</span></span></del>
                </div>*@
                 <div class="text-center">
                    <ins><span>@item.UnitPrice<span>تومان</span></span></ins>
                    </div>
            </div>
        </div>
    }
</div>
