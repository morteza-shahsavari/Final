                if (!response.error) {
                    location.reload();
                }
                else {
                    alert(response.message)
                }
            }
        });
    });


    $(document).on("click", ".Addminus", function (e) {
        e.preventDefault();
        var id = $(this).attr("data-productId");
        var url = "@Url.Action("RemoveProductFromSessionByIdMinus","Product")";
        $.ajax({
            url: url,
            data: { productId: id },
            type: "POST",
            success: function (response) {
                if (!response.error) {
                   location.reload();  
                }
                else {
                    alert(response.message)
                }
            }
        });
    });



    function Bindcartdropdown(){    
        var sendingUrl = "@Url.Action("ViewCardDown","Orders")";        
            $.get(sendingUrl, null, function(grd) {
            $("#Bindcartdropdown").html(grd);
            $("#cartdropdown").addClass(" show");
            $("#cartdropdownul").addClass(" show");
            });
    }


    $(document).on("click", document.body, function (){
        $("#cartdropdown").removeClass(" show");
        $("#cartdropdownul").removeClass(" show");
    });

</script>



