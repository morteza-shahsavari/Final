@model EShopMashtiHasan.Models.Numbers

@{
    ViewData["Title"] = "Mult";
}

<h1>Mult</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Mult" method="post" asp-controller="BinaryOperation">
            
            <div class="form-group">
                <label asp-for="FirstNumber" class="control-label"></label>
                <input asp-for="FirstNumber" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="SecondNumber" class="control-label"></label>
                <input asp-for="SecondNumber" class="form-control" />
            
            </div>
            <div class="form-group" >
            <label asp-for="Result" class="control-label"></label>
             
                
                   @if (Model != null)
                   {
                       <h1>@Model.Result</h1>
                   }

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



