@model EShopMashtiHasan.ViewModel.AdvertisementViewModel

@{
    ViewData["Title"] = "AddNewAdvertisement";
}

<h1>AddNewProduct</h1>

<h4>AdvertisementViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEdit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedSectionId" class="control-label"></label>
                @Html.DropDownListFor(x=>x.SelectedSectionId , Model.Sections, new {@class="form-control"} )
                <span asp-validation-for="SelectedSectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                @Html.TextBoxFor(x=>x.Link)
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                @Html.TextBoxFor(x=>x.Position)
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpireDate" class="control-label"></label>
                <input asp-for="ExpireDate" class="form-control" />
                <span asp-validation-for="ExpireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input type="file" name="Picture" value="" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

